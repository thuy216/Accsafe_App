{
  "name": "accsafe-electron",
  "version": "1.0.0",
  "main": "main.js",
  "author": "AccSafe Team",
  "description": "Browser Profile Management System with Fingerprinting",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:win": "npm run build && electron-builder --win",
    "build:all": "npm run build && electron-builder --win --x64 --ia32",
    "start": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "electron": "wait-on http://localhost:5173 && electron .",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.2",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.accsafe.app",
    "productName": "AccSafe",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "node_modules/**/*",
      "public/logo.png"
    ],
    "extraResources": [
      {
        "from": "../Chrome-bin",
        "to": "Chrome-bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../code_test_nhan",
        "to": "code_test_nhan",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public/logo.png",
        "to": "logo.png"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/logo.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AccSafe"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}
